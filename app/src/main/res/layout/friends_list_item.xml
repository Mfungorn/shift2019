<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="64dp"
        android:id="@+id/friends_list_item_layout"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/friend_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_person_accent_24dp"
            app:civ_border_width="1px"
            app:civ_border_color="#FF000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <TextView
            android:text="John Doe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_friend_name" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/friend_icon"
            android:layout_marginStart="16dp" android:textSize="18sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_friend_phone"
            app:layout_constraintTop_toBottomOf="@+id/text_friend_name"
            app:layout_constraintStart_toEndOf="@+id/friend_icon" android:layout_marginStart="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>